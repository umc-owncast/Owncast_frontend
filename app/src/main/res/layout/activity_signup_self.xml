<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupSelfActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@id/btn_next">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:contentDescription="back_button"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="@dimen/TitleLargeSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_marginBottom="20dp">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나중에 변경할 수 있어요"
            android:textSize="@dimen/TitleMediumSize"
            android:textColor="@color/none_gray"
            android:layout_below="@+id/main_text"
            tools:ignore="ObsoleteLayoutParam"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/etSelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+ 직접 입력할게요"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/TitleMediumSize"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0자/20자)"
                android:textSize="@dimen/TitleMediumSize"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = ""/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_purple"
        android:text="완료"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TitleMediumSize"
        android:backgroundTint="@color/button_unclick"
        android:clickable="false"/>

</RelativeLayout>