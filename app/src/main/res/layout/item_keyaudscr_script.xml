<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/key_audscr_origin_tv"
        android:text="I will speak ENg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:textColor="#00051F"
        android:textSize="14sp"
        android:letterSpacing="0.02"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/key_audscr_trans_tv"
        android:text="한국말로 말하겠다"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/key_audscr_origin_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="3sp"
        android:textColor="#00051F"
        android:textSize="14sp"
        android:letterSpacing="0.02"

        />
</androidx.constraintlayout.widget.ConstraintLayout>