<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    >



    <ImageView
        android:id="@+id/homefr_owncast_iv"
        android:src="@drawable/owncast_main_ic"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/insert_keyw"
        android:gravity="top"
        />

    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <TextView
        android:id="@+id/homefr_favor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:letterSpacing="0.01"
        android:textColor="@color/text_color"
        android:text="(닉네임)님,\n어떤걸 좋아하세요?"
        android:layout_marginTop="26dp"

        android:lineSpacingExtra="0sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/homefr_owncast_iv"
        app:layout_constraintStart_toStartOf="@id/homefr_owncast_iv"
        />
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/insert_keyw"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8666666666666667"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/main_color"
        android:background="@drawable/insert_keyw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homefr_favor_tv"
        >
        <ImageView
            android:id="@+id/homefr_add_iv"
            android:src="@drawable/homefr_add_ic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="top"/>
        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="좋아하는 키워드를 입력해보세요"
            android:textSize="16sp"
            android:letterSpacing="0.01"
            android:textColor="@color/white"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/homefr_script_direct_input_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="스크립트를 직접 입력할래요"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:letterSpacing="0.01"
        android:textColor="@color/black"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.65sp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="right|top"
        app:layout_constraintTop_toBottomOf="@id/homefr_td_keyword_cl"
        app:layout_constraintEnd_toEndOf="@id/homefr_td_keyword_cl"

        android:layout_marginEnd="2dp" />







    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homefr_td_keyword_cl"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8666666666666667"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="@id/insert_keyw"

        app:layout_constraintTop_toBottomOf="@id/insert_keyw"
        android:layout_marginTop="52dp"
        android:background="@drawable/homefr_keyword_bg">
        <ImageView
            android:id="@+id/homefr_td_keyword_circle_iv"
            android:layout_width="88.19dp"
            android:layout_height="86.13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:tint="@color/main_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/main_interst_tv"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:letterSpacing="0.01"

            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.65sp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="2sp"
            app:layout_constraintStart_toStartOf="@id/homefr_td_keyword_circle_iv"
            app:layout_constraintEnd_toEndOf="@id/homefr_td_keyword_circle_iv"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword_circle_iv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword_circle_iv"/>



            >
            <TextView
                android:id="@+id/homefr_td_keyword1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:lineSpacingExtra="-13sp"
                android:gravity="right|top"
                android:textSize="24sp"
                android:letterSpacing="0.02"
                android:layout_marginTop="30dp"
                android:layout_marginStart="61dp"


                android:textColor="@color/black"
                android:text=""
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/homefr_td_keyword_circle_ic"
                app:layout_constraintTop_toTopOf="@id/homefr_td_keyword1_tv"
                app:layout_constraintStart_toEndOf="@id/homefr_td_keyword1_tv"
                app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword1_tv"
                app:tint="@color/main_color"

                android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/homefr_td_keyword2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="right|top"
            android:textSize="20sp"
            android:letterSpacing="0.02"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="46dp"


            android:textColor="@color/black"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword2_tv"
            app:layout_constraintStart_toEndOf="@id/homefr_td_keyword2_tv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword2_tv"
            app:tint="@color/main_color"

            android:layout_marginStart="4dp"/>
        <TextView
            android:id="@+id/homefr_td_keyword3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:lineSpacingExtra="-13sp"
            android:gravity="right|top"
            android:textSize="14sp"
            android:letterSpacing="0.03"
            android:layout_marginTop="115dp"
            android:layout_marginStart="28dp"


            android:textColor="@color/black"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword3_tv"
            app:layout_constraintStart_toEndOf="@id/homefr_td_keyword3_tv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword3_tv"
            app:tint="@color/main_color"

            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/homefr_td_keyword4_tv"
            android:layout_width="100dp"
            android:layout_height="40dp"


            android:gravity="center"
            android:textSize="20sp"
            android:letterSpacing="0.02"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="18dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword4_tv"
            app:layout_constraintEnd_toStartOf="@id/homefr_td_keyword4_tv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword4_tv"
            app:tint="@color/main_color"

            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/homefr_td_keyword5_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:gravity="right|top"
            android:textSize="32sp"
            android:letterSpacing="0.02"
            android:layout_marginTop="286dp"
            android:layout_marginEnd="27dp"


            android:textColor="@color/black"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword5_tv"
            app:layout_constraintStart_toEndOf="@id/homefr_td_keyword5_tv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword5_tv"
            app:tint="@color/main_color"

            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/homefr_td_keyword6_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:lineSpacingExtra="-13sp"
            android:gravity="right|top"
            android:textSize="28sp"
            android:letterSpacing="0.02"
            android:layout_marginTop="240dp"
            android:layout_marginStart="28dp"


            android:textColor="@color/black"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword6_tv"
            app:layout_constraintStart_toEndOf="@id/homefr_td_keyword6_tv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword6_tv"
            app:tint="@color/main_color"

            android:layout_marginStart="4dp"/>









    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/homefr_td_keyword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#00051F"
        android:layout_alignParentTop="true"

        android:text="를 좋아하는 당신을 위해"

        app:layout_constraintTop_toTopOf="@id/homefr_keyword_topic_tv"
        app:layout_constraintStart_toEndOf="@id/homefr_keyword_topic_tv"

        android:lineSpacingExtra="3sp"

        android:gravity="top"/>
    <TextView
        android:id="@+id/homefr_keyword_topic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/main_color"
        android:layout_alignParentTop="true"

        android:text="야구"
        app:layout_constraintBottom_toTopOf="@id/homefr_td_keyword_cl"
        app:layout_constraintStart_toStartOf="@id/homefr_td_keyword_cl"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="3dp"
        android:lineSpacingExtra="3sp"

        android:gravity="top"/>


</androidx.constraintlayout.widget.ConstraintLayout>