<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    >

    <ImageView
        android:id="@+id/homeFr_background_iv"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:src="@drawable/homefr_background_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:background="#853489"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/homefr_owncast_iv"
        android:src="@drawable/homefr_owncast_ic"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toTopOf="@id/homeFr_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="top"
        />

    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/insert_keyw"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/insert_keyw"
        app:layout_constraintTop_toTopOf="@id/homeFr_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/homeFr_background_iv"
        >
        <ImageView
            android:id="@+id/homefr_add_iv"
            android:src="@drawable/homefr_add_ic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="top"/>
        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="관심 있는 키워드를 입력해보세요"
            android:textSize="16sp"
            android:letterSpacing="0.01"
            android:textColor="#263238"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/homefr_script_input_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="스크립트를 직접 입력할래요"
        android:textSize="14sp"
        android:letterSpacing="0.01"
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.65sp"
        android:gravity="right|top"
        app:layout_constraintBottom_toBottomOf="@id/homeFr_background_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/homefr_today_topic_cl"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="오늘의 문장"
        android:textSize="14sp"
        android:textColor="#455A64"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homefr_today_topic_cl"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@id/homeFr_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/homefr_tdtopic_bg"
        >

        <ImageView
            android:id="@+id/homefr_sound_ic_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/homefr_sound_ic"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/homefr_sound_ic_iv"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="16dp"
            >
            <TextView
                android:id="@+id/homefr_topic_eng_tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="I cooked today."
                android:textSize="12sp"
                android:letterSpacing="0.03"
                android:textColor="#455A64"
                android:lineSpacingExtra="2sp"
                android:translationY="-0.84sp"

                android:gravity="top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@id/homefr_topic_trans_tv"

                />
            <TextView
                android:id="@+id/homefr_topic_trans_tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="오늘은 요리를 해보았어요"
                android:textSize="12sp"
                android:letterSpacing="0.03"
                android:textColor="#455A64"
                android:lineSpacingExtra="2sp"
                android:translationY="-0.84sp"

                android:gravity="top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/homefr_topic_eng_tv"
                app:layout_constraintBottom_toBottomOf="parent"


                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homefr_td_keyword_cl"
        android:layout_width="328dp"
        android:layout_height="334dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homefr_today_topic_cl"
        android:layout_marginTop="52dp"
        android:background="@drawable/homefr_keyword_bg">
        <ImageView
            android:id="@+id/homefr_td_keyword_circle_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/homefr_td_keyword_circle_ic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.01"
            android:text="[    ]"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.65sp"
            android:gravity="center_horizontal|top"
            app:layout_constraintStart_toStartOf="@id/homefr_td_keyword_circle_iv"
            app:layout_constraintEnd_toEndOf="@id/homefr_td_keyword_circle_iv"
            app:layout_constraintTop_toTopOf="@id/homefr_td_keyword_circle_iv"
            app:layout_constraintBottom_toBottomOf="@id/homefr_td_keyword_circle_iv"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeft_td_keyword_1.rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="67.2dp"
            android:layout_marginStart="79dp"
            >
            <TextView
                android:id="@+id/homeft_td_keyword_1.tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:lineSpacingExtra="2sp"
                android:translationY="-0.84sp"
                android:gravity="right|top"
                android:textSize="12sp"
                android:letterSpacing="0.03"
                android:textColor="#455A64"
                android:text="키워드"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/homefr_td_keyword_circle_ic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/homeft_td_keyword_1.tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeft_td_keyword_2.rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="91.8dp"
            android:layout_marginEnd="65dp"
            >
            <TextView
                android:id="@+id/homeft_td_keyword_2.tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:lineSpacingExtra="2sp"
                android:translationY="-0.84sp"
                android:gravity="right|top"
                android:textSize="12sp"
                android:letterSpacing="0.03"
                android:textColor="#455A64"
                android:text="키워드"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/homefr_td_keyword_circle_ic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/homeft_td_keyword_2.tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/homefr_td_keyword_tv"
        android:layout_width="197dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="326dp"
        android:text="[]를 선택한 유저의 키워드"
        app:layout_constraintBottom_toTopOf="@id/homefr_td_keyword_cl"
        app:layout_constraintStart_toStartOf="@id/homefr_td_keyword_cl"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.65sp"
        android:gravity="top"/>



</androidx.constraintlayout.widget.ConstraintLayout>