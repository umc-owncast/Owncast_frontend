<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1">

    <ImageView
        android:id="@+id/homefr_owncast_iv"
        android:src="@drawable/owncast_main_ic"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/insert_keyw"
        android:gravity="top" />

    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <TextView
        android:id="@+id/homefr_favor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:letterSpacing="0.01"
        android:textColor="@color/text_color"
        android:text="(닉네임)님,\n어떤걸 좋아하세요?"
        android:layout_marginTop="26dp"
        android:lineSpacingExtra="0sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/homefr_owncast_iv"
        app:layout_constraintStart_toStartOf="@id/homefr_owncast_iv" />
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/insert_keyw"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8666666666666667"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/main_color"
        android:background="@drawable/insert_keyw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homefr_favor_tv">
        <ImageView
            android:id="@+id/homefr_add_iv"
            android:src="@drawable/homefr_add_ic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="top"/>
        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="좋아하는 키워드를 입력해보세요"
            android:textSize="16sp"
            android:letterSpacing="0.01"
            android:textColor="@color/white"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/homefr_script_direct_input_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="스크립트를 직접 입력할래요"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:letterSpacing="0.01"
        android:textColor="@color/black"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.65sp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="right|top"
        app:layout_constraintTop_toBottomOf="@id/homefr_td_keyword_cl"
        app:layout_constraintEnd_toEndOf="@id/homefr_td_keyword_cl"
        android:layout_marginEnd="2dp" />


    <!--지윤-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homefr_td_keyword_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/homefr_keyword_bg"
        app:layout_constraintWidth_percent="0.8666666666666667"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="@id/insert_keyw"
        app:layout_constraintTop_toBottomOf="@id/insert_keyw">

        <TextView
            android:id="@+id/cell_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/homefr_td_keyword_circle_ic"
            android:backgroundTint="@color/main_purple"
            android:gravity="center"
            android:text="Center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.3"/>

        <TextView
            android:id="@+id/cell1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="31dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.15"/>

        <TextView
            android:id="@+id/cell2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="48dp"
            android:gravity="center"
            android:text="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <TextView
            android:id="@+id/cell3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="3"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/cell_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.15"/>

        <TextView
            android:id="@+id/cell4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="4"
            app:layout_constraintBottom_toBottomOf="@id/cell_center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_marginStart="10dp"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintHeight_percent="0.15"/>

        <TextView
            android:id="@+id/cell5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="5"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.12"/>

        <TextView
            android:id="@+id/cell6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.15"/>


    </androidx.constraintlayout.widget.ConstraintLayout>








    <!--지윤-->


    <TextView
        android:id="@+id/homefr_td_keyword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#00051F"
        android:layout_alignParentTop="true"
        android:text="를 좋아하는 당신을 위해"
        app:layout_constraintTop_toTopOf="@id/homefr_keyword_topic_tv"
        app:layout_constraintStart_toEndOf="@id/homefr_keyword_topic_tv"
        android:lineSpacingExtra="3sp"
        android:gravity="top"/>
    <TextView
        android:id="@+id/homefr_keyword_topic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/main_color"
        android:layout_alignParentTop="true"
        android:text="야구"
        app:layout_constraintBottom_toTopOf="@id/homefr_td_keyword_cl"
        app:layout_constraintStart_toStartOf="@id/homefr_td_keyword_cl"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="3dp"
        android:lineSpacingExtra="3sp"
        android:gravity="top"/>

</androidx.constraintlayout.widget.ConstraintLayout>