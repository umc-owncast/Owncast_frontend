<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_fr"
    android:layout_width="158dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_search_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"

        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/keyword_aud_save_src_bg"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/item_thumb_iv"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:src="@drawable/save_keyword_thumb_ex1"

            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/searchfr_item_add_category_off_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_ctg_btn_ui"
        android:background="@color/white"

        app:layout_constraintTop_toBottomOf="@id/item_search_cardview"
        app:layout_constraintEnd_toEndOf="@id/item_search_cardview"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"/>



    <!--<ImageView
        android:id="@+id/searchfr_item_add_category_on_iv"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/search_add_category_on"
        app:layout_constraintTop_toBottomOf="@id/item_thumb_iv"
        app:layout_constraintEnd_toEndOf="@id/item_thumb_iv"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"/>-->

    <TextView
        android:id="@+id/searchfr_item_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/searchfr_item_time"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:text="4:28"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/item_search_cardview"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/searchfr_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:letterSpacing="0.01"
        android:text="캐스트제목"
        android:textColor="@color/text_color"
        android:textSize="14sp"

        app:layout_constraintEnd_toStartOf="@id/searchfr_item_add_category_off_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/item_search_cardview"
        app:layout_constraintTop_toBottomOf="@id/item_search_cardview" />

    <TextView
        android:id="@+id/searchfr_item_category_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="크리에이터-카테고리"
        android:textSize="12sp"
        android:letterSpacing="0.04"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/searchfr_item_title_tv"
        app:layout_constraintStart_toStartOf="@id/searchfr_item_title_tv"
        app:layout_constraintEnd_toStartOf="@id/searchfr_item_add_category_off_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>