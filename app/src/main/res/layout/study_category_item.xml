<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/study_category_iv"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/round_corner_backgrond"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playlistfr_dummy_iv" />

    <TextView
        android:id="@+id/study_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/study_category_iv"
        app:layout_constraintTop_toBottomOf="@+id/study_category_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>