<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupThirdActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@id/btn_next">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="38px"
            android:paddingBottom="52px">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:contentDescription="back_button"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="@dimen/TitleLargeSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_marginBottom="46px">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/main_purple"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:layout_marginEnd="@dimen/top_bar_space"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(닉네임)님,\n로그인에 필요한 정보를 입력해주세요"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16px"/>

        <TextView
            android:id="@+id/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나중에 변경할 수 있어요"
            android:textSize="@dimen/TitleMediumSize"
            android:textColor="@color/none_gray"
            android:layout_below="@+id/main_text"
            tools:ignore="ObsoleteLayoutParam"
            android:layout_marginBottom="60px"/>

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@+id/sub_text"
            tools:ignore="ObsoleteLayoutParam" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름 입력(5자 이내)"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/TitleMediumSize"
            android:layout_below="@+id/Name"
            android:layout_marginBottom="60px"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@+id/etName"
            tools:ignore="ObsoleteLayoutParam" />

        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디 입력 (5~15자)"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/TitleMediumSize"
            android:layout_below="@+id/Id"
            android:layout_marginBottom="60px"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@+id/etId"
            tools:ignore="ObsoleteLayoutParam" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 입력 (영문, 숫자, 특수문자 포함 8~16자)"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/TitleMediumSize"
            android:layout_below="@+id/Password"
            android:layout_marginBottom="60px"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/PasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@+id/etPassword"
            tools:ignore="ObsoleteLayoutParam" />

        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 재입력"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/TitleMediumSize"
            android:layout_below="@+id/PasswordConfirm"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_purple"
        android:text="다음"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TitleMediumSize"/>

</RelativeLayout>