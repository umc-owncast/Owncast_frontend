<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/line1"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="top|left"
        android:src="@drawable/screen_one_line"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="top|left"
        android:src="@drawable/screen_one_line2"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/sub_text">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OWNCAST"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_star"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나만의 맞춤형 오디오"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_centerVertical="true">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입 후, 당신만을 위한\n추천과 서비스를 받아보세요!"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_below="@+id/sub_text"
        android:textAlignment="center"
        android:layout_marginTop="10dp">
    </TextView>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:background="@drawable/button_purple"
        android:text="로그인"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/signUpBtn"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:background="@drawable/button_white_border"
        android:text="회원가입"
        android:textColor="@color/main_purple"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>