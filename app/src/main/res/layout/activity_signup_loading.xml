<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupLoadingActivity">

    <FrameLayout
        android:id="@+id/progress_section"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@+id/progress_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:rotation="270"
            android:backgroundTint="#E0E0E0"/>

        <ImageView
            android:id="@+id/loading_inner_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/loading_img_2"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/loading_inner_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/loading_img_3"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/loading_inner_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/loading_img_4"
            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_section"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:text="로딩 중..."
        android:textSize="16sp"
        android:textAlignment="center"/>
</RelativeLayout>