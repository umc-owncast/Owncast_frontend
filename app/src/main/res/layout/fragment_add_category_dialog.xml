<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="216dp"
    android:layout_height="132dp"

    tools:context=".keyword.AddCategoryDialog">

    <ImageView
        android:id="@+id/category_dialog_circle_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/add_category_dialog_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_dialog_x_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/add_category_dialog_exit"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@id/category_dialog_circle_iv"
        app:layout_constraintTop_toTopOf="@id/category_dialog_circle_iv"
        app:layout_constraintBottom_toBottomOf="@id/category_dialog_circle_iv"
        app:layout_constraintStart_toStartOf="@id/category_dialog_circle_iv"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="-7dp" />

    <EditText
        android:id="@+id/fragment_add_category_plain_tv"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="카테고리 이름"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_add_category_dialog_off"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/add_category_dialog_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_category_plain_tv" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="104dp"
        android:text="새 카테고리 추가"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_add_category_dialog_on"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/real_jinja_ok"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_category_plain_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>